<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container my-4">
    <h3 class="text-center mb-4"><%= listing.title %></h3>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-4 overflow-hidden listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>">

          <div class="card-body">
            <p class="card-text text-muted mb-2"><%= listing.description %></p>
            <p class="card-text mb-2">
              <span class="fw-bold text-dark">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
            </p>
            <p class="card-text text-secondary">
              <i class="bi bi-geo-alt-fill me-1"></i>
              <%= listing.location %>, <%= listing.country %>
            </p>

            <div class="d-flex justify-content-end gap-2 mt-4">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark px-4">Edit</a>

              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="m-0">
                <button class="btn btn-danger px-4">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row justify-content-center my-3">
      <div class="col-md-8 col-lg-6">
        <h4 class="text-center mb-4">Leave A Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="valid-feedback">Comment looks good!</div>
            <div class="invalid-feedback">Please add some comment for review</div>
          </div>
          <div class="d-flex justify-content-end gap-2 mb-3">
            <button class="btn btn-outline-dark px-4">Submit</button>
          </div>
        </form>
      </div>
    </div>
    <hr>
    <div class="row justify-content-center my-3">
      <div class="col-md-10 col-lg-8">
        <h4 class="text-center mb-4">All Reviews</h4>

        <% if (listing.reviews.length === 0) { %>
        <div class="text-center text-muted fst-italic mb-3">
          No reviews yet â€” be the first to share your experience!
        </div>
        <% } %>

        <div class="row g-4">
          <% for (const review of listing.reviews) { %>
          <div class="col-12 col-md-6">
            <div class="card border-0 shadow-sm rounded-4 h-100">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <h6 class="fw-bold mb-0 text-dark">
                    <i class="bi bi-person-circle me-2 text-secondary"></i>John Doe
                  </h6>
                  <div class="text-warning">
                    <% for (let i = 1; i <= 5; i++) { %>
                    <% if (i <= review.rating) { %>
                    <i class="bi bi-star-fill"></i>
                    <% } else { %>
                    <i class="bi bi-star"></i>
                    <% } %>
                    <% } %>
                  </div>
                </div>
                <p class="card-text text-muted mb-0"><%= review.comment %></p>
                <div class="d-flex justify-content-end gap-2 mt-3">
                  <form action="/listings/<%= listing._id %>/reviews/<%=review._id%>/?_method=DELETE" method="POST" class="m-0">
                    <button class="btn btn-sm btn-danger px-2">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>